{
    "name": "barfly",
    "version": "0.0.1",
    "description": "A minimal backend so you can focus on the other side ",
    "main": "dist/app.js",
    "scripts": {
        "clean": "rimraf dist/*",
        "lint": "tslint -c tslint.json -p tsconfig.json --fix",
        "tsc": "tsc",
        "build": "npm-run-all clean lint tsc",
        "dev:start": "npm-run-all build start",
        "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
        "start": "node .",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thevahidal/barfly.git"
    },
    "keywords": [
        "backend-as-a-service",
        "node"
    ],
    "author": "Vahid Al @thevahidal",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/thevahidal/barfly/issues"
    },
    "homepage": "https://github.com/thevahidal/barfly#readme",
    "dependencies": {
        "body-parser": "^1.20.0",
        "dotenv": "^16.0.2",
        "express": "^4.18.1"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.14",
        "@types/node": "^18.7.18",
        "nodemon": "^2.0.20",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "tslint": "^6.1.3",
        "typescript": "^4.8.3"
    }
}