{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "incremental": true, // only recompile changed code
        "outDir": "dist",
        "skipLibCheck": true, // donâ€™t check library .d.ts files
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "migrations", "./dist/**", "test/**"]
}
